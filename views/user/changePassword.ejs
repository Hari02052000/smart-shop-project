  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
   async function  changePassword(event,email){
        event.preventDefault()
      let form=document.getElementById('passwordForm')
      let formdata=new FormData(form)
      let newPassword=formdata.get('newPassword')
      let conformPassword=formdata.get('conformPassword')
      console.log(newPassword,conformPassword)
      if(newPassword===conformPassword){
       const res=await fetch(`/changePassword?email=${email}&password=${newPassword}`,{method:'POST'})
       let data=await res.json()
       if(data.updated){
        const click=await Swal.fire({
                     icon: 'success',
                     title: 'password updated',
                     
                   })
             console.log(click)
             if(click.isConfirmed){
               window.location.href=`/login`
             }
       }
      }
      else{
        Swal.fire({
                   icon: 'error',
                   title: 'password and conform password are not equal',
                   text: "enter carefull"
                 })
      
      }
    }
  </script>

